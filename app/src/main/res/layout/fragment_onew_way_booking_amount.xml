<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorlightblue"
    tools:context=".UI.Fragments.OutStation.OnewWayBookingAmountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical"
        android:background="@drawable/bottomradius_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Back" />

            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:src="@drawable/bell_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:src="@drawable/share_icon"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:scaleType="fitXY"
            android:src="@drawable/carfamily"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="@dimen/_110sdp"
          app:cardCornerRadius="@dimen/_6sdp"
          android:layout_marginStart="@dimen/_12sdp"
          android:layout_marginEnd="@dimen/_12sdp"
          app:cardElevation="@dimen/_6sdp"
          app:cardMaxElevation="@dimen/_6sdp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_5sdp"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <EditText
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:inputType="text"
                      android:layout_marginStart="@dimen/_12sdp"
                      android:textSize="@dimen/_12sdp"
                      android:layout_gravity="center"
                      android:background="@null"
                      android:hint="25.10.2022"
                      android:textColor="@color/black" />

                  <TextView
                      android:layout_width="@dimen/_29sdp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/edit_round_color_yellow"
                      android:gravity="center"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/black"
                      android:text="edit"
                      android:layout_marginStart="@dimen/_6sdp"/>

                  <EditText
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:inputType="text"
                      android:layout_marginStart="@dimen/_42sdp"
                      android:textSize="@dimen/_12sdp"
                      android:layout_gravity="center"
                      android:background="@null"
                      android:hint="6.00 pm"
                      android:textColor="@color/black" />

                  <TextView
                      android:layout_width="@dimen/_29sdp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/edit_round_color_yellow"
                      android:gravity="center"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/black"
                      android:text="edit"
                      android:layout_marginStart="@dimen/_6sdp"/>

              </LinearLayout>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_26sdp"
                  android:layout_marginStart="@dimen/_5sdp"
                  android:orientation="horizontal"
                  android:layout_marginEnd="@dimen/_5sdp"
                  android:background="@drawable/btn_left_corner">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="250 Km."
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"
                      android:layout_gravity="center"
                      android:layout_marginStart="@dimen/_32sdp"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="250 Km."
                      android:textColor="@color/white"
                      android:textSize="@dimen/_12sdp"
                      android:layout_gravity="center"
                      android:layout_marginStart="@dimen/_62sdp"/>

              </LinearLayout>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Sector 34, Chandigarh"
                  android:layout_gravity="center"
                  android:fontFamily="sans-serif-black"
                  android:layout_marginTop="@dimen/_6sdp"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_12sdp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rohani Delhi, India"
                  android:layout_gravity="center"
                  android:fontFamily="sans-serif-black"
                  android:layout_marginTop="@dimen/_6sdp"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_12sdp" />




          </LinearLayout>

      </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>