<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorlightblue"
    tools:context=".UI.Fragments.OutStation.Fragmment_OneWay_km_Count">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical"
        android:background="@drawable/bottomradius_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Back" />

            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:src="@drawable/bell_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:src="@drawable/share_icon"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:scaleType="fitXY"
            android:src="@drawable/carfamily"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-22dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_360sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardMaxElevation="@dimen/_6sdp"
            app:cardElevation="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_195sdp"
                android:background="@color/coloryellow"
                android:scaleType="fitXY"
                android:src="@drawable/googlemapimg" />


            <LinearLayout
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_85sdp"
                android:background="@drawable/btn_bg_coffiesquare"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="sans-serif-black"
                        android:text="Active-2012           Rs.45.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="4.5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <RatingBar
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:scaleX=".15"
                            android:scaleY=".15"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:numStars="5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                           android:background="@color/grey"
                            android:text="reject"
                            android:backgroundTint="@color/colorcoffie"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="accept"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:background="@color/colorgreen"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>




                </LinearLayout>











            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_145sdp"
                android:layout_marginTop="@dimen/_85sdp"
                android:background="@drawable/btn_bg_coffiesquare"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="sans-serif-black"
                        android:text="Pulsar-2012           Rs.45.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="4.5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <RatingBar
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:scaleX=".15"
                            android:scaleY=".15"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:id="@+id/ride_service_rating"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                           android:background="@color/grey"
                            android:text="reject"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="accept"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:background="@color/colorgreen"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>




                </LinearLayout>











            </LinearLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/car"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/bottombuttonbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/figgofooter"/>


</LinearLayout>