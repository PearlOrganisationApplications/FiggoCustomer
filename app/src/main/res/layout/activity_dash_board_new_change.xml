<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbluedashboard"
    tools:context=".DashBoard_NewChange">

    <include layout="@layout/dashboard_header_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardMaxElevation="@dimen/_6sdp"
            app:cardElevation="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" "
                android:layout_gravity="center"
                android:background="@null"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/girl"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_1sdp"
                        android:background="@color/colorbluedashboard"
                        android:src="@drawable/city_cab"/>

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_1sdp"
                        android:background="@color/colorbluedashboard"
                        android:src="@drawable/city_cab"/>

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_margin="@dimen/_1sdp"
                        android:background="@color/colorbluedashboard"
                        android:layout_weight="1"
                        android:src="@drawable/city_cab"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:text="city cab"
                        android:layout_marginStart="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:text="city cab"
                        android:layout_marginStart="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:text="share cab"
                        android:layout_marginStart="@dimen/_12sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/airportcab"/>

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/royalcab"/>


                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/fadetour"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/goodsparcel"/>

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/fadehote"/>


                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/fadetrain"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/fadebus"/>

                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/airportcab"/>


                    <ImageView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_weight="1"
                        android:src="@drawable/more"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rcv_cardoffer"/>


                </LinearLayout>






                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/girl"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Order And Booking"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:padding="7dp"/>




                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Offer And Discount"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Figgo Rewards"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Figgo Account"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Refer And Earn"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Help And Support"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="FAQs"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Rate Us"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Sends Feddback"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Term And Conditions"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:padding="7dp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Cancellations Policy"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textSize="18sp"
                    android:padding="7dp"/>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>










</LinearLayout>