<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E5FA"
    tools:context=".UI.OneWayOutstationActivity.OneWayCabBookDetails">

    <include layout="@layout/headerscreenwithoutimg"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/choose_user"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="100dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_createdat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="25.10.2022 / 6.00 pm"
                    android:textColor="#000F3B"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvdis_outtstation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_card"
                        android:gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:padding="7dp"
                        android:text="250 Km. "
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvdis2_outsttaion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_card"
                        android:gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:padding="6dp"

                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_updatedat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="25.10.2022 / 6.00 pm"
                    android:textColor="#000F3B"
                    android:textSize="12sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:background="@color/black"
                    android:layout_gravity="center"/>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/_24sdp"
                        android:maxHeight="@dimen/_24sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pic_location"/>

                    <TextView
                        android:id="@+id/tv_toloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Sector 34, Chandigarh"
                        android:textColor="#000F3B"
                        android:textSize="12sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:maxHeight="@dimen/_24sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/line"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/_24sdp"
                        android:maxHeight="@dimen/_24sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/drop_location"/>



                    <TextView
                        android:id="@+id/tv_fromloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Rohani Delhi, India"
                        android:textColor="#000F3B"
                        android:textSize="12sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:background="@color/black"
                    android:layout_gravity="center"/>


                <TextView
                    android:id="@+id/tv_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Approx.. fare Rs. 125 to 145,\n                for this ride\nwithout waiting  parking charge\nFinal Price is differ from Approx. "
                    android:textColor="#000F3B"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:background="@color/black"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bookother"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_left_corner"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="Book for other"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_bookforself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_left_corner"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="Book for self"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/car"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/figgofooter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

