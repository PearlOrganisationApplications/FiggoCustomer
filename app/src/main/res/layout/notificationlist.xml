<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_2sdp"
    android:backgroundTint="#D9F4FD"
    app:cardCornerRadius="@dimen/_1sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/crl_logoimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/appicon"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:id="@+id/tv_bellnotifaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update on Form details verifications"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#02201A"
                android:textSize="@dimen/_8sdp"
                android:text="Hello Driver, Your form has been sucessfully verified"/>
            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_7sdp"
                android:textColor="#282727"
                android:text="6 hours ago"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_3sdp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>