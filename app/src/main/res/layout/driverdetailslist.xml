<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_205sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_6sdp"
        android:layout_margin="@dimen/_12sdp"
        android:backgroundTint="@color/colornavyblue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_vehicleimg"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/blueactiva_img" />


            <TextView
                android:id="@+id/tv_vehiclenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_22sdp"
                android:text="Activa - CH-01-2015"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            app:cardElevation="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardMaxElevation="@dimen/_6sdp">

            <ImageView
                android:id="@+id/iv_driverimg"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:scaleType="fitXY"
                android:src="@drawable/girl_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iv_drivername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_32sdp"
                    android:fontFamily="sans-serif-black"
                    android:padding="@dimen/_5sdp"
                    android:text="Ravi Singh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <RatingBar
                    android:id="@+id/ride_service_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:max="5"
                    android:numStars="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_dl_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_32sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="DL. No. Cgdjn9857imvc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_reject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="@dimen/_6sdp"
                android:background="@color/colorRed"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Reject"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="3"
                android:layout_margin="@dimen/_6sdp"
                android:background="@color/coloryellowlight"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Accept"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>