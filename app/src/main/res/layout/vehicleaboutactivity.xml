<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorlightblue"
    tools:context=".VehicleAboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical"
        android:background="@drawable/bottomradius_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backimg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Back" />

            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/bell_icon"/>

            <ImageView
                android:id="@+id/shareimg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_share_24"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-104dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardMaxElevation="@dimen/_6sdp"
            app:cardElevation="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/coloryellow"
                android:scaleType="fitXY"
                android:src="@drawable/googlemapimg" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activaimg"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_weight="1"
            android:src="@drawable/blueactiva_img" />


        <TextView
            android:id="@+id/activavehiclenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Activa - CH-01-2015"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <!--  <TextView
              android:id="@+id/emergencyexit"
              android:layout_marginStart="@dimen/_12sdp"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/_25sdp"
              android:fontFamily="sans-serif-black"
              android:text="Emergency Exit"
              android:gravity="center"
              android:background="@color/colorgreen"
              android:layout_gravity="center"
              android:textColor="@color/black"
              android:textSize="@dimen/_12sdp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardMaxElevation="@dimen/_2sdp"
            android:layout_margin="@dimen/_12sdp">

            <ImageView
                android:id="@+id/driverimg"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_195sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:scaleType="fitXY"
                android:src="@drawable/girl_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/drivername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="sans-serif-black"
                    android:text="Ravi Singh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:layout_gravity="end"
                    android:numStars="5"
                    android:id="@+id/ride_service_rating"/>

                <TextView
                    android:id="@+id/vehiclenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_32sdp"
                    android:text="DL. No. Cgdjn9857imvc"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:background="@color/colornavyblue"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/call"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:text="95625-65214" />

        <TextView
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:background="@color/coloryellowlight"/>
    </LinearLayout>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicleinformation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_155sdp"
        android:orientation="vertical"/>-->



    <ImageView
        android:id="@+id/car"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/bottombuttonbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/figgofooter"/>

</LinearLayout>